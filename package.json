{
    "name": "api-skeleton",
    "version": "1.0.0",
    "description": "Skeleton for Node REST APIs",
    "main": "dist/index.js",
    "scripts": {
        "lint": "eslint ./src ./test --ext .ts",
        "lint:fix": "eslint ./src ./test --ext .ts --fix",
        "build": "tsc",
        "test": "npm run test:unit && npm run test:functional",
        "test:unit": "jest",
        "test:functional": "jest --projects ./test --runInBand",
        "start": "npm run build && node dist/index.js",
        "start:dev": "ts-node-dev src/index.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pcandido/api-skeleton.git"
    },
    "author": "Paulo CÃ¢ndido",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/pcandido/api-skeleton/issues"
    },
    "homepage": "https://github.com/pcandido/api-skeleton#readme",
    "dependencies": {
        "@overnightjs/core": "^1.7.5",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "module-alias": "^2.2.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.19",
        "@types/module-alias": "^2.0.0",
        "@types/node": "^14.14.20",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.12.0",
        "eslint": "^7.17.0",
        "jest": "^26.6.3",
        "supertest": "^6.0.1",
        "ts-jest": "^26.4.4",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3"
    }
}
